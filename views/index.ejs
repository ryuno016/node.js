<!DOCTYPE html>
<html lang="ja">
    <head>
        <meta charset="UTF-8">
        <title>User list</title>
        <link rel="stylesheet" href="/style.css">
    </head>
    <body>
        <h2>ユーザー検索</h2>
        <form method="POST" action="/">
            <input type="number" name="userId" placeholder="ユーザーIDを入力">
            <button type="submit">検索</button>
        </form>
        <% if (foundUser) { %>
            <h3>検索結果</h3>
            <p>名前: <%= foundUser.name %></p>
            <p>メールアドレス: <%= foundUser.email %></p>
            <% } else if (message) { %>
                <p><%= message %></p>
                <% } %>
                    <h2>全ユーザー一覧</h2>
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>名前</th>
                                <th>メールアドレス</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user=> { %> <tr>
                                    <td>
                                        <%= user.id %>
                                    </td>
                                    <td>
                                        <%= user.name %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <a href="/edit/<%= user.id %>">更新</a>
                                        <a href="/delete/<%= user.id %>" onclick="return confirm('本当に削除しますか？');">削除</a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <p><a href="/create">ユーザーの追加</a></p>
    </body>
</html>
