<!DOCTYPE html>
<html lang="ja">
    <head>
        <meta charset="UTF-8">
        <title>User list</title>
    </head>
    <body>
        <h2>ユーザー検索</h2>
        <form method="POST" action="/">
            <input type="number" name="userId" placeholder="ユーザーIDを入力">
            <button type="submit">検索</button>
        </form>
        <% if (foundUser) { %>
            <h3>検索結果</h3>
            <p>名前: <%= foundUser.name %></p>
            <p>メールアドレス: <%= foundUser.email %></p>
            <% } else if (message) { %>
                <p><%= message %></p>
                <% } %>
                    <h2>全ユーザー一覧</h2>
                    <table>
                        <% if (users) { %>
                            <% users.forEach(user=> { %> <tr>
                                    <td>
                                        <%= user.id %>
                                    </td>
                                    <td>
                                        <%= user.name %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } %>
                    </table>
    </body>
</html>
